---
apiVersion: litmuschaos.io/v1alpha1
kind: ChaosResult
metadata:
  {% if instance_id is defined and c_result is defined %}
  name: {{ c_result }}-{{ instance_id }}
  {% elif c_result is defined %}
  name: {{ c_result }}
  {% else %}
  name: {{ c_experiment }}
  {% endif %} 
  labels:
    {% if chaos_uid is defined %}
    chaosUID: {{ chaos_uid }}
    {% endif %} 
    type: ChaosResult
spec:
  engine: {{ c_engine }}
  experiment: {{ c_experiment }}
  {% if instance_id is defined %}
  instance: {{ instance_id }}
  {% endif %}
status:
  experimentstatus: 
    phase: {{ phase }}  
    verdict: {{ verdict }}
    {% if failStep is defined %}
    failStep: {{ failStep }}
    {% endif %}
    